<h1>Restaurants</h1>
<p><%= link_to 'Add restaurant', new_restaurant_path, class: "btn btn-primary" %></p>

<% @restaurants.each do |resto| %>
  <h2><%= resto.name %>&nbsp;|&nbsp;<span class="review"><%= resto.reviews.first ? resto.reviews.first.rating : 'No reviews yet'  %></span></h2>
  <p><%= link_to 'Details', restaurant_path(resto), class: "btn btn-primary" %></p>
<% end %>
